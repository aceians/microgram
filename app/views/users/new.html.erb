<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>
      
      <%= f.label :individualrole, "Individual Role" %>
      <%= f.collection_select :individualrole, User::INDIVIDUAL_ROLES, :to_s, :to_s, 
       :include_blank => true, :selected => 'Student'
      %>
      
      <%= f.label :org, "Organisation" %>
      <%= f.text_field :org %>
      
      <%= f.label :dept, "Department" %>
      <%= f.text_field :dept %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>